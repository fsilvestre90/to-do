<html>
    <head>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
        <title>To Do List</title>
    </head>
    <body>
        <div class="container">
        <h1>Tasks</h1>

        {% if tasks is not empty %}
            <p>Here are all your tasks:</p>
            <ul>
                {% for task in tasks %}
                    <li><a href='/tasks/{{ tasks.getId }}'>{{ task.getDescription }}</a></li>
                {% endfor %}
            </ul>
        {% endif %}

        <form action="/tasks" method="post">
            <div class="form-group">
                <label for="description">Task:</label>
                <input id="description" name="description" type="text">
            </div>
            <div class='from-group'>
                <label for="due_date">Due by:</label>
                <input type="date" name="due_date" id="due_date">
            </div>

            <button class="btn btn-default" type="submit">Add task</button>
        </form>
        <form action="/delete_tasks" method="post">
            <button class="btn btn-danger" type="submit">Clear</button>
        </form>
        <br/>
        <a href="/"><button class="btn-default">Home</button></a>
    </div>
    </body>
</html>
